import cv2
from ultralytics import YOLO

model = YOLO('/Users/tombo/Documents/CORE/Safetybot/trained models/hammer.pt')

# Open the webcam
cap = cv2.VideoCapture(0)

# Loop to process each frame
while True:
    # Capture each frame from the webcam
    ret, frame = cap.read()
    
    if not ret:
        print("Error: Failed to grab frame.")
        break

    # Run YOLOv8 on the current frame
    results = model(frame)

    # Draw the detections (bounding boxes, labels, etc.) on the frame
    annotated_frame = results[0].plot()

    # Display the frame with YOLOv8 detections
    cv2.imshow('YOLOv8 Real-Time Detection', annotated_frame)

    # Exit the loop if 'q' is pressed
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release the camera and close all OpenCV windows
cap.release()
cv2.destroyAllWindows()
